<HBProfile creator="Botanist and Wigglez" version="1.0">
	<Name>[QO-A-M][10-17]_deadmines</Name>
   
	<MinLevel>1</MinLevel>
	<MaxLevel>101</MaxLevel>
   
	<MinDurability>-1</MinDurability>
	<MinFreeBagSlots>-1</MinFreeBagSlots>
	
	<MailGrey>False</MailGrey>
	<MailWhite>False</MailWhite>
	<MailGreen>False</MailGreen>
	<MailBlue>False</MailBlue>
	<MailPurple>False</MailPurple>
   
	<SellGrey>False</SellGrey>
	<SellWhite>False</SellWhite>
	<SellGreen>False</SellGreen>
	<SellBlue>False</SellBlue>
	<SellPurple>False</SellPurple>
   
	<TargetElites>False</TargetElites>
	
	<AvoidMobs>	
	</AvoidMobs>
	
	<Blackspots>
	</Blackspots>

	<Mailboxes>
	</Mailboxes>
 
	<Vendors>
	</Vendors>

	<Factions>
	</Factions>
	
	<ProtectedItems>	
	</ProtectedItems>
	
	<ClearVendor />
	<ClearMailbox />
	
	<QuestOrder>
		
		<!-- Booster -->
		<If Condition="Me.Level &gt;= 90">
			<CustomBehavior File="UserSettings" 
							LootMobs="False" 
							SkinMobs="False" 
							LootRadius="1" 
							LootChests="False" 
							PullDistance="45" 
							KillBetweenHotspots="True" 
							FindVendorsAutomatically="False"
							LogoutForInactivity="false"	/>
							
			<!-- Are we in the instance box and is our gears durability ok -->		
			<If Condition="Me.X &lt; -11195 &amp;&amp; Me.X &gt; -11220 &amp;&amp; Me.Y &gt; 1650 &amp;&amp; Me.Y &lt; 1690" >
				<If Condition="Me.LowestDurabilityPercent &lt; 0.1" >
					<CustomBehavior File="UserDialog" 
									AllowBotStop="False" 
									SoundCue="Exclamation" 
									SoundCueInterval="15" 
									ExpiryTime="60"
									ExpiryAction="InputEnabled_Continue" 
									Text="Main Character - I have detected that my gear is about to break. I need to repair. You can stop the bot to manually repair or press continue to use the automated features." 	
									Title="WARNING" />	

					
					<!-- If we have our Hearthstone, use it -->
					<If Condition="HasItem(6948)">
						<CustomBehavior File="Misc\RunLua" 
										Lua="UseItemByName(6948)" 
										WaitTime="1000" />
						
						<!-- Otherwise use the Innkeeper's Daughter -->
						<Else>
							<CustomBehavior File="Misc\RunLua" 
											Lua="UseItemByName(64488)" 
											WaitTime="1000" />
						</Else>
					</If>	
					
					<!-- Waiting for the loading screen -->
					<CustomBehavior File="WaitTimer" 
									WaitTime="20000" />
					
					<!-- If we are in westfall, repair -->
					<If Condition="Me.ZoneId == 40" >
						<CustomBehavior File="ForceSetVendor" 
										DoMail="False" 
										DoRepair="True" 
										DoSell="False" 
										DoTrain="False" />
					
						<CustomBehavior File="Message" 
										Text="Successfully hearthed, moving to the repair vendor." 
										LogColor="Fuchsia" />												
						<SetVendor>
							<Vendors>
								<!-- Sentinel Hill -->
								<Vendor Name="William MacGregor" 
										Entry="1668" 
										Type="Repair" 
										X="-10653.31" Y="996.5868" Z="32.87417" />
							</Vendors>
						</SetVendor>
						
						<!-- We are done vendoring -->
						<If Condition="Me.DurabilityPercent &gt; 0.8" >
							<CustomBehavior File="Message" 
											Text="Repairing complete, moving back to Deadmines." 
											LogColor="Fuchsia" />
						</If>
					</If>
				</If>	
			</If>
			
			<!-- In eastern kingdoms, outside the box --> 
			<If Condition="Me.X &gt; -11195 || Me.X &lt; -11220 || Me.Y &lt; 1650 || Me.Y &gt; 1690" >
				<If Condition="Me.MapId == 0" >
				
					<CustomBehavior File="Message" 
					Text="Flying to Westfall." 
					LogColor="Lime" />
					
					<!-- Checking hearth location and the quest is incomplete -->
					<If Condition="Me.HearthstoneAreaId != 108" >
						<If Condition="!HasQuest(26322) &amp;&amp; !IsQuestCompleted(26322)" >
							<!-- Fly to the innkeep in the wooden building -->
							<CustomBehavior File="FlyTo" 
											X="-10640.08" Y="1157.555" Z="33.34619" />							
							<CustomBehavior File="ForcedDismount" />
							
							<!-- Run inside the inn -->
							<RunTo X="-10650.05" Y="1165.21" Z="34.5228" />
							
							<!-- Set hearthstone -->
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />
							<CustomBehavior File="Message" 
											Text="Setting my Hearthstone." 
											LogColor="Lime" />
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />
							<CustomBehavior File="SetHearthstone" 
											MobId="8931" 
											X="-10653.28" Y="1166.431" Z="34.50462" />
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />
							
							<!-- Run outside the inn -->
							<RunTo X="-10640.08" Y="1157.555" Z="33.34619" />	
						</If>
						
						<!-- Checking hearth location and the quest is complete -->
						<If Condition="!HasQuest(26322) &amp;&amp; IsQuestCompleted(26322)">
							<!-- Fly to the innkeep in the tower -->
							<CustomBehavior File="FlyTo" 
											X="-10510.34" Y="1053.079" Z="59.25743" />							
							<CustomBehavior File="ForcedDismount" />
							
							<!-- Run inside the inn -->
							<RunTo X="-10503.31" Y="1031.031" Z="60.52037" />
							
							<!-- Set hearthstone -->
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />
							<CustomBehavior File="Message" 
											Text="Setting my Hearthstone." 
											LogColor="Lime" />
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />
							<CustomBehavior File="SetHearthstone" 
											MobId="8931" 
											X="-10501.87" Y="1028.536" Z="60.52414" />
							<CustomBehavior File="WaitTimer" 
											WaitTime="1000" />
							
							<!-- Run outside the inn -->
							<RunTo X="-10510.34" Y="1053.079" Z="59.25743" />
						</If>
					</If>
					
					<!-- Fly to the rendezvous location -->
					<CustomBehavior File="FlyTo" 
									X="-11065.5" Y="1530.04" Z="43.20776" />	
					<CustomBehavior File="ForcedDismount" />
					
					<!-- Rendezvous location -->
					<CustomBehavior File="Misc\LoadProfileOn" 
									CheckRange="5" />
					
					<!-- Run through caverns to Deadmines -->							
					<RunTo X="-11086.47" Y="1530.567" Z="43.27423" />
					<RunTo X="-11097.69" Y="1515.96" Z="43.12984" />
					<RunTo X="-11088.03" Y="1507.087" Z="42.99051" />
					<RunTo X="-11073.57" Y="1500.448" Z="42.86707" />
					<RunTo X="-11188.25" Y="1520.978" Z="18.98619" />
					<RunTo X="-11181.27" Y="1541.052" Z="19.36648" />
					<RunTo X="-11208" Y="1676.41" Z="24.5716" />
					
					<!-- Inside the instance box, load the Deadmines profile -->
					<If Condition="Me.X &lt; -11195 &amp;&amp; Me.X &gt; -11220 &amp;&amp; Me.Y &gt; 1650 &amp;&amp; Me.Y &lt; 1690" >
						<CustomBehavior File="LoadProfile" 
										ProfileName="..\[QO-A][10-17]_deadmines" />
					</If>
				</If>		
			</If>
		</If>	


	<!-- ******************************************************* RAF Toons *************************************************************** -->

		<!-- RAF Toons -->
		<If Condition="Me.Level &lt;= 85">
		
			<!-- Userdialog zone check, the RAF toons must be in Goldshire to initiate the profile, will stop the bot if not in Goldshire -->
			<If Condition="Me.ZoneId != 12" >
				<CustomBehavior File="UserDialog" 
								AllowBotStop="False" 
								SoundCue="Exclamation" 
								SoundCueInterval="15" 
								ExpiryTime="60"
								ExpiryAction="InputDisabled_BotStop" 
								Text="RAF Character - You must be in Goldshire to run this profile. Please move your character to Elwynn Forest and restart the bot !!!" 	
								Title="WARNING" />
			</If>
				
			<!-- UserSettings -->
			<CustomBehavior File="UserSettings" 
							LootMobs="False" 
							SkinMobs="False" 
							LootRadius="1" 
							LootChests="False" 
							PullDistance="1" 
							KillBetweenHotspots="False" 
							FindVendorsAutomatically="False"
							LogoutForInactivity="False"	/>
				
			<!-- Outside the instance box -->				
			<If Condition="Me.X &gt; -11195 || Me.X &lt; -11220 || Me.Y &lt; 1650 || Me.Y &gt; 1690" >
				<CustomBehavior File="Message" 
								Text="Moving to Westfall." 
								LogColor="Lime" />
				
				<!-- Bridge entering Westfall -->
				<RunTo X="-9792.037" Y="824.2371" Z="27.77231" />
				
				<!-- Sentinel hill fp -->
				<RunTo X="-10551.9" Y="1034.39" Z="56.95429" />	
	
				<!-- Outside the building entering Deadmines, wait spot for 90 to clear the way in -->
				<RunTo X="-11065.5" Y="1530.04" Z="43.20776" />
					
				<!-- Rendezvous location -->
				<CustomBehavior File="Misc\LoadProfileOn" 
									CheckRange="5" />
								
				<!-- Wait timer to allow the 90 to clear the path to Deadmines -->		
				<CustomBehavior File="WaitTimer" 
								WaitTime="50000" />
				
				<!-- Run through caverns to Deadmines -->
				<RunTo X="-11088.26" Y="1498.584" Z="48.72324" />
				<RunTo X="-11121.01" Y="1481.248" Z="33.35756" />
				<RunTo X="-11107.92" Y="1519.643" Z="30.61022" />
				<RunTo X="-11139" Y="1543.302" Z="20.01213" />
				<RunTo X="-11168" Y="1570.847" Z="22.32095" />
				<RunTo X="-11207.21" Y="1575.018" Z="29.26582" />
				<RunTo X="-11242.41" Y="1555.996" Z="33.92076" />
				<RunTo X="-11229.63" Y="1594.055" Z="32.26101" />
				<RunTo X="-11225.81" Y="1634.064" Z="34.34218" />
				<RunTo X="-11208.98" Y="1669.187" Z="24.73553" />
				<RunTo X="-11208" Y="1676.41" Z="24.5716" />
					
				<!-- Inside the instance box, load the Deadmines profile -->	
				<If Condition="Me.X &lt; -11195 &amp;&amp; Me.X &gt; -11220 &amp;&amp; Me.Y &gt; 1650 &amp;&amp; Me.Y &lt; 1690" >
					<CustomBehavior File="LoadProfile" 
									ProfileName="..\[QO-A][10-17]_deadmines" />
				</If>
					
			</If>	
		</If>

	</QuestOrder>
</HBProfile>

