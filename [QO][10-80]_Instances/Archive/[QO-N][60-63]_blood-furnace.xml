						<If Condition="Me.ZoneId != 3713">
							<CustomBehavior File="Message" 
											Text="We are locked out. Waiting and trying again." 
											LogColor="Fuchsia" />
						</If> <!-- Locked -->
					</While> <!-- While we aren't in the instance -->
				</If> <!-- In box -->
				
				<!-- If we are inside Blood Furnace and have checked our reset -->
				<If Condition="Me.ZoneId == 3713">
					<!-- Entrance -->
					<RunTo X="-2.73782" Y="19.8424" Z="-44.79826" />
				
					<!-- Run to quest givers -->
					<RunTo X="0.2994731" Y="-15.27276" Z="-42.70581" />

					<!-- Begin the instance once all party members are within range  -->
					<CustomBehavior File="Misc\LoadProfileOn" 
									CheckRange="2" />
									
					<CustomBehavior File="Misc\InstanceTimer" Timer="Start" /> 
									
					<CustomBehavior File="Message" 
									Text="Blood Furnace initialized."  
									LogColor="Fuchsia" />
									
					<CustomBehavior File="Message" 
									Text="Avoiding instance lock from this point, do not touch." 
									LogColor="Yellow" />				
					
					<CustomBehavior File="WaitTimer"
									WaitTime="20000" />
									
					<CustomBehavior File="Misc\LoadProfileOn" 
									CheckRange="5" />
									
					<CustomBehavior File="WaitTimer"
									WaitTime="20000" />
					
					<!-- Sit around before first boss --> 
					<RunTo X="346.772" Y="-6.079209" Z="9.625376" />
					
					<CustomBehavior File="Misc\LoadProfileOn" 
									CheckRange="5" />
									
					<!-- If we are high enough to go to the next instance, do so -->
					<CustomBehavior File="Misc\LoadProfileOn" 
									MinLevel="63" 
									ProfileName="[QO-N][63-68]_sethekk-halls.xml"  />
								
					<!-- Wait so the main can get away from us -->
					<CustomBehavior File="WaitTimer" 
									WaitTime="30000" />
									
					<CustomBehavior File="Misc\InstanceTimer" Timer="Check" />  
				</If> <!-- HR -->
				
				<!-- If we are inside -->
				<If Condition="Me.ZoneId == 3713">
					<CustomBehavior File="Message" 
									Text="Blood Furnace detected. Running out."
									LogColor="Fuchsia" />
									
					<RunTo X="-4.093049" Y="17.00105" Z="-44.78368" />
					
					<!-- Go through the portal -->
					<CustomBehavior File="MyCTM" X="-0.4589169" Y="25.4346" Z="-44.8006" />
					
					<!-- Make sure we run to the right spot outside the portal -->
					<RunTo X="-302.408" Y="3162.92" Z="31.7273" />
				</If> <!-- BF -->
			</While> <!-- Infinite loop -->
		</If> <!-- RAF -->
	</QuestOrder>
